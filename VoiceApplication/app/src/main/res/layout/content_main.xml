<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="voice.example.com.myapplication.MainActivity"
    tools:showIn="@layout/activity_main">

    <ImageView
        android:id="@+id/back"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/default_circle"
        android:onClick="onClick"
        android:src="@android:drawable/ic_menu_revert"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="30dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/short_record_text"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="30dp"
        android:textSize="35dp"
        android:textColor="@android:color/holo_blue_bright"/>
    <TextView
        android:id="@+id/curRecoder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="120dp"
        android:textColor="@color/black"
        android:textSize="25dp"/>

    <voice.example.com.myapplication.recordwave.VoiceMicView
        android:id="@+id/micView"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="160dp"/>
    <Chronometer
        android:id="@+id/record_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/micView"
        android:layout_marginTop="20dp"
        android:format="00:00:00"
        android:textColor="@color/gray"
        android:textSize="25dp"/>

    <TextView
        android:id="@+id/textNextRecoder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/record_time"
        android:layout_marginTop="60dp"
        android:textColor="@color/gray"
        android:textSize="25dp"/>

    <ImageButton
        android:id="@+id/btnPlay"
        android:layout_width="@dimen/default_width"
        android:layout_height="@dimen/default_height"
        android:layout_marginRight="@dimen/default_marginParentRight"
        android:layout_marginTop="60dp"
        android:src="@android:drawable/ic_media_play"
        android:background="@drawable/default_circle"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/btnNext"
        android:layout_width="@dimen/default_width"
        android:layout_height="@dimen/default_height"
        android:layout_marginRight="@dimen/default_marginParentRight"
        android:layout_marginTop="@dimen/default_marginTop"
        android:src="@android:drawable/ic_media_next"
        android:background="@drawable/default_circle"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnPlay" />

    <ImageButton
        android:id="@+id/btnRemake"
        android:layout_width="@dimen/default_width"
        android:layout_height="@dimen/default_height"
        android:layout_marginRight="@dimen/default_marginParentRight"
        android:layout_marginTop="@dimen/default_marginTop"
        android:src="@android:drawable/ic_menu_rotate"
        android:background="@drawable/default_circle"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnNext" />
    <ImageButton
        android:id="@+id/btnSpeakOnOff"
        android:layout_width="@dimen/default_width"
        android:layout_height="@dimen/default_height"
        android:layout_marginRight="@dimen/default_marginParentRight"
        android:layout_marginTop="@dimen/default_marginTop"
        android:src="@android:drawable/ic_btn_speak_now"
        android:background="@drawable/default_circle"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnRemake" />

</android.support.constraint.ConstraintLayout>
